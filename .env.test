# Test Environment Configuration
# This file is loaded during test execution

# Application Settings
NODE_ENV=test
PORT=3001
LOG_LEVEL=warn

# TRADING SAFETY: ALWAYS true for tests - NEVER allow real trades in tests
USE_TEST_MODE=true

# Test API Credentials (safe dummy values for testing)
MEXC_API_KEY=test_api_key_for_testing
MEXC_API_SECRET=test_api_secret_for_testing

# Kraken Exchange API Credentials
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

# Disable external network calls in tests
DISABLE_NETWORK_CALLS=true
