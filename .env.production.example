# Production Environment Configuration Template
# Copy this to .env.production and fill with actual production values
# DO NOT commit .env.production to version control

# Application Settings
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# TRADING SAFETY: Set to false ONLY in production when ready for live trading
# Review this setting carefully before deploying
USE_TEST_MODE=true

# Production API Credentials
# Replace with your actual production API credentials
MEXC_API_KEY=your-production-mexc-api-key
MEXC_API_SECRET=your-production-mexc-api-secret

# Production-specific settings
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
ENABLE_PERFORMANCE_MONITORING=true

# Security settings
ENABLE_CORS=false
ALLOWED_ORIGINS=https://your-domain.com
